# ===========================================
#      English (United Kingdom) (en_GB)
# ===========================================
# Inherits from en.ftl, overrides for UK date formats.

# Machine-readable metadata (used by --list-languages)
-lang-code = en
-lang-name = English (United Kingdom)
-lang-dialect = en_GB

# -----------------------------------
#           Time & Dates
# -----------------------------------
# Date Formats (Day before Month)
# Time: 24-hour format
datetime =
    .full = %-d %B %Y at %H:%M
    .short-current-year = %-d %b
    .short-with-year = %-d %b %Y
